<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="dayCalendarStyle">@style/DefaultDayCalendarStyle</item>
    </style>

    <style name="DayCalendarStyle">
        <item name="titleHeight">@dimen/dayCalendarTitleHeight</item>
        <item name="timeLineWidth">@dimen/dayCalendarTimeLineWidth</item>
        <item name="titleBackgroundColor">@color/dayCalendarTitleBackgroundColor</item>
        <item name="titleTextColor">@color/dayCalendarTitleTextColor</item>
        <item name="titleTextSize">@dimen/dayCalendarTitleTextSize</item>
        <item name="eventBackgroundDefaultColor">@color/dayCalendarEventBackgroundDefaultColor</item>
        <item name="eventTextColor">@color/dayCalendarEventTextColor</item>
        <item name="eventTextSize">@dimen/dayCalendarEventTextSize</item>
        <item name="eventCornerRadius">@dimen/dayCalendarEventCornerRadius</item>
        <item name="timeLineColor">@color/dayCalendarTimeLineColor</item>
        <item name="timeLineSize">@dimen/dayCalendarTimeLineSize</item>
    </style>

    <style name="DefaultDayCalendarStyle" parent="DayCalendarStyle" />

    <style name="OtherDayCalendarStyle" parent="DefaultDayCalendarStyle">
        <item name="titleBackgroundColor">#000</item>
        <item name="titleTextColor">#FFF</item>
        <item name="titleTextSize">20sp</item>
        <item name="eventTextColor">#000</item>
        <item name="eventCornerRadius">10dp</item>
        <item name="timeLineColor">#008800</item>
        <item name="timeLineSize">2dp</item>
    </style>
    
</resources>